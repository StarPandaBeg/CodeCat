{% macro block(align="center") -%}
<div class="block" style="text-align: {{ align }};">
  {{caller()}}
</div>
{%- endmacro %}

{% macro block_title(title) -%}
<h1 class="block__row block__title">
  {{title}}
</h1>
{%- endmacro %}

{% macro block_row() -%}
<div class="block__row">
  {{ caller() }}
</div>
{%- endmacro %}